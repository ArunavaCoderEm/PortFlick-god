model Template {
  id             String         @id @default(cuid())
  name           String         @unique
  previewUrl     String?
  portfolioStyle PortfolioStyle
  isActive       Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now())

  portfolios Portfolios[]
}

enum JobType {
  FullTime
  PartTime
  Hybrid
  Intern
}

enum TypeProps {
  Personal
  SAAS
}

enum StatusProps {
  Active
  Pending
  Completed
}

enum SocialPlatform {
  GitHub
  LinkedIn
  Twitter
  Instagram
  Facebook
}

enum PortfolioStyle {
  Minimalist
  Modern
  Creative
  Professional
}
